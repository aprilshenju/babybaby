<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

<!--  	
	private long id;
	private String title;
	private String description;
	private String image_urls;
	private Date date;
	private long teacher_id;
	private long class_id;
	-->

	<class name="com.umeijia.vo.HomeWork" table="t_homework">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="title" column="title"></property>
        <property name="valid" column="valid"></property>
        <property name="description" column="description"></property>
		<property name="date" column="date" ></property>		
		<property name="teacher_id" column="teacher_id" ></property>
		<property name="image_urls" column="image_urls" ></property>		
      
          <property name="class_id" column="class_id"></property>
	</class>
	
	
	
</hibernate-mapping>