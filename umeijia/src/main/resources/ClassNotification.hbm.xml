<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

<!--  	

	private long id;
	private String title;
	private String description;
	private String image_urls; // 分号拼接在一起。
	private Date date;
	private long teacher_id;
	private long class_id;
	private String subscribers; // 分号分割
	-->

	<class name="com.umeijia.vo.ClassNotification" table="t_notification">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="title" column="title"></property>	
		<property name="description" column="description" length="1500"></property>
		<property name="image_urls" column="image_urls"></property>   
		<property name="date" column="date" ></property>			
		<property name="teacher_id" column="teacher_id"></property>
        <!--<property name="class_id" column="class_id"></property>-->
        <property name="subscribers" column="subscribers"></property>

	</class>
	
	
	
</hibernate-mapping>