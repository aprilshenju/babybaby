	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

<!--  	
	private long id;
	private String phone_num;
	private String pwd_md;
	private String name;
	private String avatar_path;
	private long stu_ids;
	private long class_id; // 暂时无法支持多个学生？
